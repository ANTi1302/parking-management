package ui;

import java.awt.BorderLayout;
import java.awt.Color;
import java.awt.Component;
import java.awt.Toolkit;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;

import javax.imageio.ImageIO;
import javax.swing.BoxLayout;
import javax.swing.ImageIcon;
import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;

public class UI_GiaDienChinh extends JFrame implements ActionListener {

	
	JButton btnIcon1,btnIcon2,btnIcon3;
	
	public UI_GiaDienChinh() throws IOException {
		BufferedImage imagebycycle = ImageIO.read(new File("image/bicycle.png"));
		ImageIcon imgbycycle = new ImageIcon(imagebycycle.getScaledInstance(50, 50, imagebycycle.SCALE_SMOOTH));
		setTitle("Lựa chọn tác vụ");
		setIconImage(imgbycycle.getImage());
		setVisible(true);
		setSize((int)Toolkit.getDefaultToolkit().getScreenSize().getWidth(),
				 (int)Toolkit.getDefaultToolkit().getScreenSize().getHeight());
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		
		//Main chinh
		JPanel pnMain= new JPanel();
		pnMain.setBackground(new Color(53,57,65));
		add(pnMain);
		
		JPanel pnNorth= new JPanel();
		pnMain.add(pnNorth, BorderLayout.NORTH);
//		pnNorth.setBackground(new Color(53,57,65));
		
		//Import logo
		BufferedImage imagelogoit = ImageIO.read(new File("image/itfaculty.jpg"));
		ImageIcon imgit = new ImageIcon(imagelogoit.getScaledInstance(70, 70, imagelogoit.SCALE_SMOOTH));
		BufferedImage imagelogoitbk = ImageIO.read(new File("image/logobk.jpeg"));
		ImageIcon imgbk = new ImageIcon(imagelogoitbk.getScaledInstance(70, 70, imagelogoitbk.SCALE_SMOOTH));
		BufferedImage imagelogolifi = ImageIO.read(new File("image/lifilogo.jpg"));
		ImageIcon imglifi = new ImageIcon(imagelogolifi.getScaledInstance(70, 70, imagelogolifi.SCALE_SMOOTH));

		pnNorth.add(btnIcon1 = new JButton("",imgit));
		pnNorth.add(btnIcon2 = new JButton("",imgbk));
		pnNorth.add(btnIcon3 = new JButton("",imglifi));
		
		btnIcon1.setBorderPainted (false);
		btnIcon1.setContentAreaFilled (false);
		btnIcon1.setFocusPainted (false);
		btnIcon2.setBorderPainted (false);
		btnIcon2.setContentAreaFilled (false);
		btnIcon2.setFocusPainted (false);
		btnIcon3.setBorderPainted (false);
		btnIcon3.setContentAreaFilled (false);
		btnIcon3.setFocusPainted (false);
		
		
		
	
	}
	public static void main(String[] args) throws IOException {
		new UI_GiaDienChinh();
	}
	
	@Override
	public void actionPerformed(ActionEvent e) {
		// TODO Auto-generated method stub
		
	}

}
